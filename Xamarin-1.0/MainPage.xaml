            <Label Text="Desglosador de monedas"  
                   TextColor="White" 
                   HorizontalTextAlignment="Center" FontSize="20"/>
        </Frame>
        <Entry Placeholder="Ingresa cantidad" 
               Keyboard="Numeric"
               x:Name="Cantidad"/>
        <Button Text="Aceptar"
                FontSize="18"
                TextColor="#FFE6E6E4"
                BackgroundColor="#FF50BFC3"
                CornerRadius="25"
                WidthRequest="100"
                HeightRequest="45"
                Clicked="Button_Clicked"/>
        <Label Text=" "/>
        <Label Text="Billetes" FontSize="22" 
               HorizontalTextAlignment="Center"
               TextColor="WhiteSmoke" />
        <Label FontSize="20" 
               HorizontalTextAlignment="Center"
               TextColor="WhiteSmoke"
               x:Name="C200"/>
        <Label FontSize="20" 
               HorizontalTextAlignment="Center" 
               TextColor="WhiteSmoke"
               x:Name="C100"/>
        <Label FontSize="20" 
               HorizontalTextAlignment="Center" 
               TextColor="WhiteSmoke"
               x:Name="C50"/>
        <Label FontSize="20" 
               HorizontalTextAlignment="Center" 
               TextColor="WhiteSmoke"
               x:Name="C20"/>
        <Label FontSize="20" 
               HorizontalTextAlignment="Center" 
               TextColor="WhiteSmoke"
               x:Name="C10"/>
        <Label FontSize="20" 
               HorizontalTextAlignment="Center" 
               TextColor="WhiteSmoke"
               x:Name="C5"/>
        <Label FontSize="20" 
               HorizontalTextAlignment="Center" 
               TextColor="WhiteSmoke"
               x:Name="C1"/>
        <Label Text=" "/>
        <Label Text="Monedas" FontSize="22" 
               HorizontalTextAlignment="Center"
               TextColor="WhiteSmoke" />
        <Label FontSize="20" 
               HorizontalTextAlignment="Center" 
               TextColor="WhiteSmoke"
               x:Name="M50"/>
        <Label FontSize="20" 
               HorizontalTextAlignment="Center" 
               TextColor="WhiteSmoke"
               x:Name="M25"/>
        <Label FontSize="20" 
               HorizontalTextAlignment="Center" 
               TextColor="WhiteSmoke"
               x:Name="M10"/>
        <Label FontSize="20" 
               HorizontalTextAlignment="Center" 
               TextColor="WhiteSmoke"
               x:Name="M5"/>
        <Label FontSize="20" 
               HorizontalTextAlignment="Center" 
               TextColor="WhiteSmoke"
               x:Name="M1"/>



